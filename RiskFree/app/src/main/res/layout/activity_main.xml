<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cinzaClaro"
    tools:context=".MainActivity">

    <!-- Imagem de fundo (posição negativa simulada com margem negativa) -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="511dp"
        android:layout_height="314dp"
        android:src="@drawable/component_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-86dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="254dp"
        android:layout_height="254dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="79dp"
        android:layout_marginTop="154dp" />

    <!-- Campo de e-mail -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="330dp"
        android:layout_height="43dp"
        android:background="@drawable/edit_text_login"
        android:ems="10"
        android:inputType="text"
        android:hint="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="43dp"
        android:layout_marginTop="439dp" />

    <!-- Campo de senha -->
    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="330dp"
        android:layout_height="43dp"
        android:background="@drawable/edit_text_login"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="43dp"
        android:layout_marginTop="536dp" />

    <!-- Esqueci senha -->
    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci minha senha"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="132dp"
        android:layout_marginTop="622dp" />


    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/azulBotao"
        android:text="ENTRAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="115dp"
        android:layout_marginTop="693dp" />


    <Button
        android:id="@+id/buttonCreateAccount"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/azulBotao"
        android:text="CRIAR CONTA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="115dp"
        android:layout_marginTop="757dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
