<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cinzaClaro">

    <!-- Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="risk.free"
        android:fontFamily="@font/league_spartan"
        android:textColor="@color/riskFreeBlue"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="271dp"
        android:layout_marginTop="27dp"/>

    <FrameLayout
        android:layout_width="177dp"
        android:layout_height="51dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gray_rectangule"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/generic_avatar"
            android:scaleType="centerInside"
            android:background="@drawable/circle_background" />
        <TextView
            android:id="@+id/userName"
            android:layout_width="97dp"
            android:layout_height="28dp"
            android:text="@Usuário"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@id/userIcon"
            app:layout_constraintTop_toTopOf="@id/userIcon"
            app:layout_constraintBottom_toBottomOf="@id/userIcon" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="349dp"
        android:layout_height="63dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/gray_rectangule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <TextView
            android:layout_width="263dp"
            android:layout_height="27dp"
            android:text="AMEACAS ECONTRADAS"
            android:fontFamily="@font/roboto_slab"
            android:layout_marginStart="107dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/riskFreeBlue"
            android:fontFamily="@font/roboto_mono"
            android:text="10"
            android:textSize="36dp" />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
