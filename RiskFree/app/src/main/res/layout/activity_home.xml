<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cinzaClaro">

    <!-- Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="risk.free"
        android:fontFamily="@font/league_spartan"
        android:textColor="@color/riskFreeBlue"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="271dp"
        android:layout_marginTop="15dp"/>

    <FrameLayout
        android:layout_width="177dp"
        android:layout_height="51dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gray_rectangule"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/generic_avatar"
            android:scaleType="centerInside"
            android:background="@drawable/circle_background" />
        <TextView
            android:id="@+id/userName"
            android:layout_width="97dp"
            android:layout_height="28dp"
            android:text="@Usuário"
            android:fontFamily="@font/roboto_mono_medium"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@id/userIcon"
            app:layout_constraintTop_toTopOf="@id/userIcon"
            app:layout_constraintBottom_toBottomOf="@id/userIcon" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="349dp"
        android:layout_height="300dp"
        android:background="@drawable/gray_rectangule16dp"
        android:layout_marginTop="483dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnReportarAmeaca"
            android:layout_width="285dp"
            android:layout_height="80dp"
            android:background="@drawable/blue_rectangule16dp"
            android:backgroundTint="@color/riskFreeBlue"

            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            android:padding="8dp"

            android:drawableEnd="@drawable/alert_square_svgrepo_com"
            android:drawablePadding="8dp"

            android:gravity="start|center_vertical"


            android:text="Reportar Ameaças"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_mono"/>

        <Button
            android:id="@+id/btnAmeacasReportadas"
            android:layout_width="285dp"
            android:layout_height="80dp"
            android:background="@drawable/blue_rectangule16dp"
            android:backgroundTint="@color/riskFreeBlue"

            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="170dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            android:padding="8dp"

            android:drawableEnd="@drawable/report_ic"
            android:drawablePadding="8dp"

            android:gravity="start|center_vertical"


            android:text="Ameaças Reportadas"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_mono"/>


        </LinearLayout>


    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
